<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Prisma\Payway\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Prisma\Payway\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </type>

    <virtualType name="PaywayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Prisma\Payway\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form\Cc</argument>
            <argument name="infoBlockType" xsi:type="string">Prisma\Payway\Block\Adminhtml\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">PaywayValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">PaywayValidatorPool</argument>
            <argument name="commandPool" xsi:type="object">PaywayCommandPool</argument>
        </arguments>
    </virtualType>

    <virtualType name="PaywayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PaywayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="PaywayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Prisma\Payway\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>

    <virtualType name="PaywayCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="capture" xsi:type="string">PaywayCaptureCommand</item>
                <item name="refund" xsi:type="string">PaywayRefundCommand</item>
<!--                <item name="void" xsi:type="string">PaywayVoidCommand</item>-->
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="PaywayCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PaywayCaptureRequest</argument>
            <argument name="transferFactory" xsi:type="object">Prisma\Payway\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Prisma\Payway\Gateway\Http\Client\TransactionSale</argument>
            <argument name="handler" xsi:type="object">PaywayCaptureHandlerChain</argument>
<!--            <argument name="validator" xsi:type="object">Prisma\Payway\Gateway\Validator\ResponseValidator</argument>-->
            <argument name="validator" xsi:type="object">Prisma\Payway\Gateway\Validator\ValidatorPool</argument>
            <argument name="errorMessageMapper" xsi:type="object">Prisma\Payway\Gateway\ErrorMapper\VirtualErrorMessageMapper</argument>
        </arguments>
    </virtualType>

    <!-- Refund Command -->
    <virtualType name="PaywayRefundCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="client" xsi:type="object">Prisma\Payway\Gateway\Http\Client\TransactionRefund</argument>
            <argument name="transferFactory" xsi:type="object">Prisma\Payway\Gateway\Http\TransferFactory</argument>
            <argument name="requestBuilder" xsi:type="object">Prisma\Payway\Gateway\Request\RefundDataBuilder</argument>
            <argument name="validator" xsi:type="object">Prisma\Payway\Gateway\Validator\GeneralResponseValidator</argument>
            <argument name="handler" xsi:type="object">Prisma\Payway\Gateway\Response\RefundHandler</argument>
        </arguments>
    </virtualType>

    <!-- Void Command -->
<!--    <virtualType name="PaywayVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">-->
<!--        <arguments>-->
<!--            <argument name="client" xsi:type="object">Prisma\Payway\Gateway\Http\Client\TransactionRefund</argument>-->
<!--            <argument name="transferFactory" xsi:type="object">Prisma\Payway\Gateway\Http\TransferFactory</argument>-->
<!--            <argument name="requestBuilder" xsi:type="object">Prisma\Payway\Gateway\Request\RefundDataBuilder</argument>-->
<!--            <argument name="validator" xsi:type="object">Prisma\Payway\Gateway\Validator\GeneralResponseValidator</argument>-->
<!--            <argument name="handler" xsi:type="object">Prisma\Payway\Gateway\Response\RefundHandler</argument>-->
<!--        </arguments>-->
<!--    </virtualType>-->

    <!-- Capture response handlers -->
    <virtualType name="PaywayCaptureHandlerChain" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="debug_response_body" xsi:type="string">Prisma\Payway\Gateway\Response\DebugBodyHandler</item>
                <item name="payment_details" xsi:type="string">Prisma\Payway\Gateway\Response\PaymentDetailsHandler</item>
                <item name="txn_id" xsi:type="string">Prisma\Payway\Gateway\Response\TransactionIdHandler</item>
                <item name="credit_card" xsi:type="string">Prisma\Payway\Gateway\Response\CreditCardHandler</item>
                <item name="address_validation" xsi:type="string">Prisma\Payway\Gateway\Response\AddressValidationHandler</item>
                <item name="cybersource" xsi:type="string">Prisma\Payway\Gateway\Response\Cybersource\CybersourceHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Request Builders -->
    <virtualType name="PaywayCaptureRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="customer" xsi:type="string">Prisma\Payway\Gateway\Request\CustomerDataBuilder</item>
                <item name="payment" xsi:type="string">Prisma\Payway\Gateway\Request\PaymentDataBuilder</item>
                <item name="site_transaction_id" xsi:type="string">Prisma\Payway\Gateway\Request\Order\SiteTransactionIdDataBuilder</item>
                <item name="amount" xsi:type="string">Prisma\Payway\Gateway\Request\Order\AmountDataBuilder</item>
                <item name="token" xsi:type="string">Prisma\Payway\Gateway\Request\TokenDataBuilder</item>
                <item name="sub_payments" xsi:type="string">Prisma\Payway\Gateway\Request\SubPaymentsDataBuilder</item>
                <item name="currency" xsi:type="string">Prisma\Payway\Gateway\Request\Order\CurrencyDataBuilder</item>
                <item name="description" xsi:type="string">Prisma\Payway\Gateway\Request\DescriptionDataBuilder</item>
                <item name="establishment_data" xsi:type="string">Prisma\Payway\Gateway\Request\Order\EstablishmentDataBuilder</item>
                <item name="cybersource_builder" xsi:type="string">Prisma\Payway\Gateway\Request\Cybersource\CybersourceBuilderPool</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Cysbersource Retail Processors-->
    <type name="Prisma\Payway\Gateway\Request\Cybersource\CybersourceBuilderPool">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="retail" xsi:type="object">Prisma\Payway\Gateway\Request\Cybersource\Processors\RetailProcessor</item>
            </argument>
        </arguments>
    </type>
    <!-- Validators -->
    <virtualType name="PaywayValidatorPool" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
<!--                <item name="country" xsi:type="string">PaywayCountryValidator</item>-->
                <item name="paywayMainValidator" xsi:type="string">Prisma\Payway\Gateway\Validator\ValidatorPool</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Prisma\Payway\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="response" xsi:type="object">\Prisma\Payway\Gateway\Validator\ResponseValidator</item>
                <item name="retail" xsi:type="object">\Prisma\Payway\Gateway\Validator\Cybersource\RetailValidator</item>
                <item name="payment" xsi:type="object">\Prisma\Payway\Gateway\Validator\PaymentValidator</item>
            </argument>
        </arguments>
    </type>

<!--    <virtualType name="PaywayCountryValidator" type="Magento\Payment\Gateway\Validator\CountryValidator">-->
<!--        <arguments>-->
<!--            <argument name="config" xsi:type="object">Prisma\Payway\Gateway\Config\Config</argument>-->
<!--        </arguments>-->
<!--    </virtualType>-->

    <!-- Gateway error mapping -->
    <virtualType name="Prisma\Payway\Gateway\ErrorMapper\VirtualConfigReader" type="Magento\Payment\Gateway\ErrorMapper\VirtualConfigReader">
        <arguments>
            <argument name="fileName" xsi:type="string">payway_error_mapping.xml</argument>
        </arguments>
    </virtualType>
    <virtualType name="Prisma\Payway\Gateway\ErrorMapper\VirtualMappingData" type="Magento\Payment\Gateway\ErrorMapper\MappingData">
        <arguments>
            <argument name="reader" xsi:type="object">Prisma\Payway\Gateway\ErrorMapper\VirtualConfigReader</argument>
            <argument name="cacheId" xsi:type="string">payway_error_mapper</argument>
        </arguments>
    </virtualType>
    <virtualType name="Prisma\Payway\Gateway\ErrorMapper\VirtualErrorMessageMapper" type="Magento\Payment\Gateway\ErrorMapper\ErrorMessageMapper">
        <arguments>
            <argument name="messageMapping" xsi:type="object">Prisma\Payway\Gateway\ErrorMapper\VirtualMappingData</argument>
        </arguments>
    </virtualType>
</config>
